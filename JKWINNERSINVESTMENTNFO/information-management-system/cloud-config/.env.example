# Cloud Configuration Environment Variables

# Flask Application Settings
FLASK_ENV=development
SECRET_KEY=change-this-to-a-secure-random-string-in-production
JWT_SECRET_KEY=jwt-secret-key-change-in-production
PORT=5000

# Database Configuration (Choose one)
# Option 1: Firebase (Recommended for real-time features)
FIREBASE_SERVICE_ACCOUNT_PATH=path/to/firebase-service-account.json
FIREBASE_PROJECT_ID=your-firebase-project-id

# Option 2: PostgreSQL (Traditional database)
DATABASE_URL=postgresql://username:password@localhost:5432/jkwi_db

# Option 3: MongoDB (Document database)
MONGODB_URI=mongodb://localhost:27017/jkwi_db

# Email Configuration (for notifications and password reset)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@jkwi.com

# File Storage Configuration
# Option 1: Google Cloud Storage
GCS_BUCKET_NAME=jkwi-documents
GOOGLE_APPLICATION_CREDENTIALS=path/to/gcs-service-account.json

# Option 2: AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=jkwi-documents
AWS_REGION=us-east-1

# Security Settings
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com
JWT_ACCESS_TOKEN_EXPIRES=24  # hours
JWT_REFRESH_TOKEN_EXPIRES=30  # days
BCRYPT_LOG_ROUNDS=12

# Rate Limiting
RATE_LIMIT_STORAGE_URL=redis://localhost:6379
RATE_LIMIT_DEFAULT=1000 per hour

# Monitoring and Logging
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=INFO

# Production Settings (for deployment)
FLASK_DEBUG=False
SSL_REDIRECT=True
FORCE_HTTPS=True

# Backup Configuration
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key
